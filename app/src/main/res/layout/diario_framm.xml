<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/diarioLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/laysfondodiario"
        android:layout_alignParentTop="true"
        android:layout_marginTop="55dp">




        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listView"
            android:descendantFocusability="beforeDescendants"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:divider="@null"
            
            />

    </FrameLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:id="@+id/actionbar"
        android:background="@drawable/ombra"
        android:visibility="invisible"
        >
        <RelativeLayout
            android:id="@+id/actionbarint"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#cfd8dc">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/modifica"
                android:id="@+id/texbarmodif"
                android:textSize="20sp"
                android:textColor="#000000"
                android:gravity="center"
                android:visibility="invisible"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/annulla"
                android:id="@+id/texbarann"
                android:textSize="20sp"
                android:textColor="#64b5f6"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:id="@+id/bar"

    android:background="@drawable/ombra">
    <RelativeLayout
        android:id="@+id/barint"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/bar_diario">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:id="@+id/imageVdrawe"
            app:srcCompat="@drawable/ic_arrow_back"

            android:onClick="clicklist"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textVgio"
            android:textColor="#616161"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            android:layout_marginStart="60dp"
            />
        <ImageView
            android:id="@+id/imagage"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_notifications_active_black_24dp"

            android:visibility="invisible"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="60dp"
            android:layout_marginEnd="60dp"/>


        <ImageView
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:id="@+id/imagsett"
            app:srcCompat="@drawable/ic_settings"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"/>

    </RelativeLayout>

</RelativeLayout>



</RelativeLayout>