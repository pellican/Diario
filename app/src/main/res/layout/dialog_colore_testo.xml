<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <com.larswerkman.holocolorpicker.ColorPicker
        android:id="@+id/picker_testo"
        android:layout_width="180dp"
        android:layout_height="180dp"


        />
    <GridView
        android:id="@+id/gridcolore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/picker_testo"
        android:layout_toEndOf="@+id/picker_testo"
        android:layout_alignBottom="@+id/sattest"
        android:layout_marginBottom="20dp"
        android:numColumns="2"
        android:verticalSpacing="5dp"
        android:horizontalSpacing="5dp"
        android:layout_marginRight="5dp"
        >
    </GridView>

    <TextView
        android:id="@+id/sattest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/saturazione"
        android:layout_below="@+id/picker_testo"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        />

    <com.larswerkman.holocolorpicker.SaturationBar
        android:id="@+id/svbartest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sattest"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        />

    <TextView
        android:id="@+id/opatest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/svbartest"
        android:text="@string/opacita"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        />

    <com.larswerkman.holocolorpicker.OpacityBar
        android:id="@+id/opacitybar_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/opatest"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/opacitybar_test"
        android:layout_marginTop="5dp"
        android:background="@color/white">

    </View>
    <TextView
    android:id="@+id/ok_colore_testo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="OK"
    android:padding="10dp"
    android:textSize="20sp"
    android:textColor="@color/conferma"
    android:layout_below="@+id/opacitybar_test"
    android:layout_alignEnd="@+id/opacitybar_test"
    android:layout_alignRight="@+id/opacitybar_test"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"/>
    <TextView
        android:id="@+id/ann_colore_testo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/annulla"
        android:padding="10dp"
        android:textSize="20sp"
        android:textColor="@color/conferma"
        android:layout_below="@+id/opacitybar_test"
        android:layout_alignStart="@+id/opacitybar_test"
        android:layout_alignLeft="@+id/opacitybar_test"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>


</RelativeLayout>