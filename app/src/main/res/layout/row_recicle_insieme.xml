<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/shadow_17594"
    android:layout_height="160dp">
    <RelativeLayout
        android:id="@+id/cardviewag"
        android:layout_width="match_parent"
        android:layout_height="40dp"



        android:layout_marginTop="114dp">

            <View
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:background="@color/bar_agenda"
                >
            </View>
            <TextView
                android:id="@+id/textoraagdi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:text="00:00"/>
            <TextView
                android:id="@+id/texttestoag"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginStart="80dp"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/imagenotins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_notifications_active_black_24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"/>

        </RelativeLayout>



<RelativeLayout


    android:id="@+id/cardviewins"
    android:layout_width="match_parent"
    android:layout_height="115dp"
    android:background="@drawable/selezione_row"


    >


    <TextView
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:id="@+id/texdatalistins"
        android:singleLine="true"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        />
    <ImageView
        android:id="@+id/emotilistins"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/ic_emotion"
        />
    <TextView
        android:id="@+id/textdata_ins"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:textColor="#000000"
        android:gravity="center"
        android:textSize="16sp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="270dp"
        android:layout_height="38sp"
        android:id="@+id/textestolistins"
        android:textSize="16sp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/texdatalistins"
        android:layout_marginTop="5dp"/>
    <ImageView
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/imagelistitemins"
        android:scaleType="centerCrop"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"

        />
    <ImageView
        android:id="@+id/imagecatins"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/ic_folder"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="180dp"
        android:layout_marginStart="180dp"/>
    <TextView
        android:id="@+id/textcatlistins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imagecatins"
        android:layout_toEndOf="@+id/imagecatins"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"

        />

</RelativeLayout>

</RelativeLayout>



