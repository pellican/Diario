<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/angoli">
    <ImageView

        android:id="@+id/imageemotidiar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_emotion"

        />
    <TextView
        android:id="@+id/titolo_diario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:text="@string/titolo"
        android:visibility="invisible"
        />
    <com.agenda.diario.CustomView.CustomEditText
        android:id="@+id/edit_titolo"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:hint="@string/titolo"
        android:textStyle="bold"
        android:textSize="18sp"
        android:linksClickable="false"
        android:imeOptions="actionDone"
        android:background="@null"
        android:singleLine="true"

        android:inputType="textCapSentences"
        android:layout_centerVertical="true"
        android:layout_marginLeft="55dp"
        android:layout_marginStart="55dp"/>

<RelativeLayout
    android:id="@+id/relativecat"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    >

    <ImageView
        android:id="@+id/imagecatdiar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_folder"

        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />
    <TextView
        android:id="@+id/texcatdiario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/imagecatdiar"
        android:layout_toStartOf="@+id/imagecatdiar"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp" />
</RelativeLayout>


    </RelativeLayout>

</RelativeLayout>


