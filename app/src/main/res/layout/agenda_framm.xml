<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:id="@+id/agendaLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:id="@+id/bar"

        android:background="@drawable/ombra">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#a5d6a7">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:id="@+id/imageVdraweag"
                app:srcCompat="@drawable/ic_arrow_back"
                android:onClick="clicklist"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textVagenda"
                android:textStyle="bold"
                android:textColor="#616161"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50dp"
                />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:id="@+id/imageVcalag"
                app:srcCompat="@drawable/calendario"
                android:layout_marginRight="77dp"
                android:layout_marginEnd="77dp"
                android:onClick="clickcal"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">

            </ImageView>

        </RelativeLayout>

    </RelativeLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_agenda"
        android:divider="#2196f3"
        android:dividerHeight="1dp"

        android:layout_below="@+id/bar">

    </ListView>
<View
    android:layout_width="1dp"
    android:layout_height="match_parent"
    android:layout_marginTop="70dp"
    android:layout_marginLeft="70dp"

    android:background="#f44336">

</View>


</RelativeLayout>