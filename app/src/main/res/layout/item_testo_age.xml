<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:layout_marginLeft="5dp"
        android:textSize="16sp"
        android:textStyle="italic"
        android:id="@+id/textVitemAgenda" />

<TextView
    android:id="@+id/textoraagitem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30dp"
    android:layout_centerVertical="true"
    android:textSize="18sp"
    android:textColor="#000000"

    android:layout_toRightOf="@+id/textVitemAgenda"/>
    <TextView
        android:id="@+id/textminagitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerVertical="true"
        android:textSize="18sp"
        android:textColor="#000000"

        android:layout_toRightOf="@+id/textoraagitem"/>

<TextView
    android:id="@+id/texttestiagitem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_marginLeft="5dp"
    android:textSize="18sp"

    android:layout_toRightOf="@+id/textminagitem"/>
    <ImageView
        android:id="@+id/imagenotitem"

        android:layout_width="25dp"
        android:layout_height="25dp"

        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>
</RelativeLayout>