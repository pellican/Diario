<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.TabLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp">

    </android.support.design.widget.TabLayout>
    <com.agenda.diario.CustomView.CustomViewPager
        android:id="@+id/sfondopaper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_below="@+id/tab">

    </com.agenda.diario.CustomView.CustomViewPager>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/ombra"
        android:id="@+id/viewsfondo">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#ffffff">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageVsfoind"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                app:srcCompat="@drawable/ic_arrow_back" />
            <TextView
                android:id="@+id/textsfondo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:text="@string/scegli_sfondo"
                android:layout_toRightOf="@+id/imageVsfoind"
                android:layout_marginLeft="10dp"/>



        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>