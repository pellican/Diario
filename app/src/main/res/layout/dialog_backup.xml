<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Switch
        android:id="@+id/switchbaclup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/backup_automatico"
        android:textSize="18sp"
        android:layout_marginTop="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>

    <TextView
        android:id="@+id/textimposta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/imposta_la_frequenza_di_backup"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:layout_below="@+id/switchbaclup"/>
    <Spinner
        android:id="@+id/spinnerbackup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/listbackup"
        android:theme="@style/spinner_color"
        android:layout_below="@+id/textimposta"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        >
    </Spinner>

    <TextView
        android:id="@+id/textnumbac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/numero_massimo_di_backup_memorizzati"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_below="@+id/spinnerbackup"/>
    <Spinner
        android:id="@+id/spinnernumbackup"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:entries="@array/numbackup"
        android:theme="@style/spinner_color"
        android:layout_below="@+id/textnumbac"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
    </Spinner>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/linea_oriz"
        android:layout_below="@+id/spinnernumbackup"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        >
    </View>
    <TextView
        android:id="@+id/textavvbackup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/avvia_backup"
        android:layout_below="@+id/spinnernumbackup"
        android:textSize="18sp"
        android:textColor="@color/text_color"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"

        />
    <TextView
        android:id="@+id/textesebackup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/esegui"
        android:textSize="18sp"

        android:textColor="@color/text_blu"
        android:padding="10dp"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBaseline="@+id/textavvbackup"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/linea_oriz"
        android:layout_below="@+id/textavvbackup"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        >
    </View>
    <TextView
        android:id="@+id/okbackup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="OK"
        android:textColor="@color/text_blu"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="10dp"
        android:layout_below="@+id/textavvbackup"
        />
    <FrameLayout
        android:id="@+id/posmessagio"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >

    </FrameLayout>


</RelativeLayout>